
.parent{
    /* padding-left:86rpx; */
    padding-top:132rpx;
}

.main .swiper{
    position:relative;
}
.main .swiper .robot{
    position:absolute;
    left:50%;
    top:-70rpx;
    transform:translateX(-50%);
}
.main .swiper .robot image{
    display:block;
    width:100rpx;
}
.main .swiper swiper{
    height:838rpx;
    padding-bottom:10rpx;
}
.main .swiper swiper swiper-item {
    padding-right:10rpx;
    box-sizing:border-box;
    
}
.main .swiper swiper swiper-item .wrap_item{
    margin-left:40rpx;
    border-radius:20rpx;
    box-shadow:8rpx 8rpx 4rpx 4rpx rgba(0,0,0,.4);
    overflow:hidden;
}

.main .swiper swiper swiper-item .wrap_item .bottom{
    background:#fff;
    display:flex;
    flex-direction:column;
    justify-content:center;
}
.main .swiper swiper swiper-item .wrap_item .bottom .text_wrap{
    width:302rpx;
    height:302rpx;
    margin:0 auto;
    border:4rpx solid #585858;
    border-radius:30rpx;
    position:relative;
    z-index:9999;
}

.main .swiper swiper swiper-item .wrap_item .bottom .text_wrap .phonogram{
    display:block;
    width:100%;
    font:32rpx/84rpx '微软雅黑';
    color:#000;
    text-align:center;

}

.main .swiper swiper swiper-item .wrap_item .bottom .text_wrap .text_inf{
    display:block;
    width:100%;
    font:140rpx/152rpx '微软雅黑';
    color:#000;
    text-align:center;

}


.main .swiper swiper swiper-item .wrap_item .bottom .text_wrap .dashed{
    display:block;
    width:100%;
    height:100%;
    position:absolute;
    top:0;
    bottom:0;
    left:0;
    right:0;
}

.main .swiper swiper  .end_card .wrap_item{
    height:828rpx;
    position:relative;
}



.main .swiper swiper  .end_card .wrap_item image{
    display:block;
    width:100%;
    height:100%;
}

.main .swiper swiper  .end_card .wrap_item .mark{
    position:absolute;
    left:0;
    right:0;
    top:0;
    bottom:0;
    background:rgba(0,0,0,.4);
}

.main .swiper swiper  .end_card .wrap_item .button{
    position:absolute;
    left:0;
    right:0;
    top:50%;
    transform:translateY(-50%);
} 

.main .swiper swiper  .end_card .wrap_item .button button{
    width:60%;
    font:34rpx/102rpx '微软雅黑';
    color:#090700;
    text-align:center;
    background:#fcc600;
    border-radius:50rpx;
    border:none;
    
}
.main .swiper swiper  .end_card .wrap_item .button .agin{
    margin-bottom:54rpx;
}

.main .swiper swiper swiper-item:first-child .wrap_item{
    margin-left:0;
}

.main .swiper swiper .top{
    width:100%;
    height:428rpx;
    position:relative;
}

.main .swiper swiper .top .poster{
    position:absolute;
    left:0;
    right:0;
    top:0;
    bottom:0;
}

.main .swiper swiper .top .poster .full_screen{
    position:absolute;
    left:0;
    right:0;
    bottom:0;
    display:flex;
    flex-direction:row;
    justify-content:center;
    background:rgba(0,0,0,.4);
}
.main .swiper swiper .top .poster .tip_msg{
    display:inline-block;
    position:relative;
    padding-left:44rpx;
    font:30rpx/80rpx '微软雅黑';
    color:#000;
}
.main .swiper swiper .top .poster .tip_msg image{
    display:block;
    width:28rpx;
    height:28rpx;
    position:absolute;
    left:0;
    top:50%;
    margin-top:-14rpx;
}

.main .swiper swiper .top .poster image{
    display:block;
    width:100%;
    height:100%;
}

.main .swiper swiper .top video{
    display:block;
    width:100%;
    height:100%;
}

.main .swiper swiper .bottom{
    width:100%;
    height:400rpx;
}
.main .swiper swiper .top image , .swiper swiper .bottom image{
    display:block;
    width:100%;
    height:100%;
}

.swiper_text{
    display:flex;
    padding-left:350rpx;
    position:relative;
    margin-top:58rpx;
}
.swiper_text  .current_text{
    display:inline-block;
    font:74rpx '微软雅黑';
    color:#000;
    position:absolute;
    left:243rpx;
    top:0;
}
.swiper_text scroll-view{
    width:100%;
}
.swiper_text .list{
    display:flex;
    flex-direction:row;
    justify-content:flex-start;
}

.swiper_text .list .item_text{
    display:inline-block;
    font:50rpx/100rpx '微软雅黑';
    color:#000;
    margin:0 16rpx;

}

.video_list{
    position:relative;
}

.video_list .video_tag{
    position:absolute;
    left:0;
    right:0;
    top:0;
    height:428rpx;
    box-sizing:border-box;
    padding:0 94rpx 0 56rpx;
    z-index:9999;
    
}

.video_list .video_tag_style{
    position:absolute;
    left:0;
    right:0;
    top:0;
    height:428rpx;
    box-sizing:border-box;
    padding:0 94rpx 0 94rpx;
    z-index:9999;
    
}

.video_list .video_tag video{
    display:block;
    width:100%;
    height:100%;
    border-radius:20rpx 20rpx 0 0;
    overflow:hidden;
}